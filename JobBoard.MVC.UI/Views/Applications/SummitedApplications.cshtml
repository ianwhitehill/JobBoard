@model IEnumerable<JobBoard.Data.EF.Application>

<h2>Summited Applications</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ApplicationDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OpenPosition.Position.Title)
        </th>
        <th class="hideMobile">
            @Html.DisplayNameFor(model => model.OpenPosition.Location)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ApplicationStatu.StatusName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserDetail.userFullname)
        </th>
        <th class="hideMobile"></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ApplicationDate)
            </td>
            <td>
                @Html.ActionLink(item.OpenPosition.Position.Title, "Edit", new { id = item.ApplicationId })
            </td>
            <td  class="hideMobile">
                @Html.DisplayFor(modelItem => item.OpenPosition.Location.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ApplicationStatu.StatusName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserDetail.userFullname)
            </td>
            <td  class="hideMobile">
                @Html.ActionLink("Details", "Edit", new { id = item.ApplicationId })
                @if (User.IsInRole("Admin"))
                {
                    <span> | </span>
                    @Html.ActionLink("Delete", "Delete", new { id = item.ApplicationId })
                }
            </td>
        </tr>
    }
</table>
